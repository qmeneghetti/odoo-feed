<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_template_form_google_category" model="ir.ui.view">
        <field name="name">product.template.form.google.category</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>  
        <field name="arch" type="xml">
            <!-- Agrega una nueva pestaña después de "Contabilidad" -->
            <xpath expr="//page[last()]" position="after">
                <page string="Google Shopping">
                    <group>
                        <field name="google_category"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>